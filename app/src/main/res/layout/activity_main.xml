<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_lineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_lineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_lineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_lineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/textView_listOfStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/label_listOfStudent"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_listOfStudent"
        app:layout_constraintEnd_toEndOf="@id/guideline_lineRight"
        app:layout_constraintStart_toStartOf="@id/guideline_lineLeft"
        app:layout_constraintTop_toTopOf="@id/guideline_lineTop" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_listOfStudent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@id/button_addStudent"
        app:layout_constraintEnd_toEndOf="@id/guideline_lineRight"
        app:layout_constraintStart_toStartOf="@id/guideline_lineLeft"
        app:layout_constraintTop_toBottomOf="@+id/textView_listOfStudent" />

    <Button
        android:id="@+id/button_addStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/button_addStudent"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/view_separator"
        app:layout_constraintEnd_toEndOf="@id/guideline_lineRight"
        app:layout_constraintStart_toStartOf="@id/guideline_lineLeft"
        app:layout_constraintTop_toBottomOf="@id/recyclerView_listOfStudent"
        />

    <View
        android:id="@+id/view_separator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:background="#AAAAAA"
        app:layout_constraintBottom_toTopOf="@id/textView_student"
        app:layout_constraintEnd_toEndOf="@id/guideline_lineRight"
        app:layout_constraintStart_toStartOf="@id/guideline_lineLeft"
        app:layout_constraintTop_toBottomOf="@id/button_addStudent" />

    <TextView
        android:id="@+id/textView_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/label_student"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/cardView_studentAvatar"
        app:layout_constraintEnd_toEndOf="@id/guideline_lineRight"
        app:layout_constraintStart_toStartOf="@id/guideline_lineLeft"
        app:layout_constraintTop_toBottomOf="@id/view_separator" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView_studentAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        app:cardCornerRadius="60dp"
        app:layout_constraintBottom_toTopOf="@+id/button_deleteStudent"
        app:layout_constraintStart_toStartOf="@id/guideline_lineLeft"
        app:layout_constraintTop_toBottomOf="@id/textView_student">

        <ImageView
            android:id="@+id/imageView_studentAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@android:color/background_light"
            android:scaleType="centerCrop"
            />
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/editText_surname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/placeholder_surname"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/editText_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView_studentAvatar"
        app:layout_constraintTop_toBottomOf="@id/textView_student" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/placeholder_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@id/radioGroup_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView_studentAvatar"
        app:layout_constraintTop_toBottomOf="@id/editText_surname" />

    <RadioGroup
        android:id="@+id/radioGroup_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cardView_studentAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView_studentAvatar"
        app:layout_constraintTop_toBottomOf="@id/editText_name"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_male" />

        <RadioButton
            android:id="@+id/radioButton_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_female" />
    </RadioGroup>

    <Button
        android:id="@+id/button_deleteStudent"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardView_studentAvatar"
        app:layout_constraintBottom_toBottomOf="@id/guideline_lineBottom"
        app:layout_constraintStart_toStartOf="@id/guideline_lineLeft"
        android:layout_marginTop="20dp"
        android:text="@string/button_deleteStudent"
        android:gravity="center"
        />

    <Button
        android:id="@+id/button_saveStudent"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardView_studentAvatar"
        app:layout_constraintBottom_toBottomOf="@id/guideline_lineBottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_lineRight"
        android:layout_marginTop="20dp"
        android:text="@string/button_saveStudent"
        android:gravity="center"
        />

</android.support.constraint.ConstraintLayout>